#!/bin/bash
################################################################################
# Protei_Bulk - Stop Script
# Safely stops the Protei_Bulk application service
################################################################################

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BASE_DIR="$(dirname "$SCRIPT_DIR")"
PID_FILE="$BASE_DIR/tmp/protei_bulk.pid"

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

APP_NAME="Protei_Bulk"

echo "========================================"
echo "  Stopping $APP_NAME"
echo "========================================"

# Check if PID file exists
if [ ! -f "$PID_FILE" ]; then
    echo -e "${YELLOW}Warning: PID file not found. $APP_NAME may not be running.${NC}"
    exit 1
fi

# Read PID
PID=$(cat "$PID_FILE")

# Check if process is running
if ! ps -p "$PID" > /dev/null 2>&1; then
    echo -e "${YELLOW}Warning: Process $PID is not running${NC}"
    rm -f "$PID_FILE"
    exit 1
fi

# Send SIGTERM for graceful shutdown
echo "Sending SIGTERM to process $PID..."
kill -TERM "$PID"

# Wait for process to terminate (max 30 seconds)
TIMEOUT=30
COUNTER=0

while ps -p "$PID" > /dev/null 2>&1; do
    if [ $COUNTER -ge $TIMEOUT ]; then
        echo -e "${YELLOW}Process did not stop gracefully. Sending SIGKILL...${NC}"
        kill -9 "$PID"
        sleep 2
        break
    fi
    echo -n "."
    sleep 1
    COUNTER=$((COUNTER + 1))
done

echo ""

# Verify process is stopped
if ps -p "$PID" > /dev/null 2>&1; then
    echo -e "${RED}✗ Failed to stop $APP_NAME (PID: $PID)${NC}"
    exit 1
else
    echo -e "${GREEN}✓ $APP_NAME stopped successfully${NC}"
    rm -f "$PID_FILE"
    exit 0
fi
