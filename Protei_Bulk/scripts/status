#!/bin/bash
################################################################################
# Protei_Bulk - Status Script
# Displays current status of the Protei_Bulk service
################################################################################

# Get script directory
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
BASE_DIR="$(dirname "$SCRIPT_DIR")"
PID_FILE="$BASE_DIR/tmp/protei_bulk.pid"
LOG_DIR="$BASE_DIR/logs"

# Colors for output
GREEN='\033[0;32m'
RED='\033[0;31m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

APP_NAME="Protei_Bulk"

echo "========================================"
echo "  $APP_NAME Status"
echo "========================================"

# Check if PID file exists
if [ ! -f "$PID_FILE" ]; then
    echo -e "Status: ${RED}NOT RUNNING${NC}"
    echo "PID file not found at: $PID_FILE"
    exit 1
fi

# Read PID
PID=$(cat "$PID_FILE")

# Check if process is running
if ! ps -p "$PID" > /dev/null 2>&1; then
    echo -e "Status: ${RED}NOT RUNNING${NC}"
    echo "PID file exists but process $PID is not running"
    echo "(Stale PID file - run 'scripts/stop' to clean up)"
    exit 1
fi

# Process is running - get details
echo -e "Status: ${GREEN}RUNNING${NC}"
echo ""
echo -e "${BLUE}Process Information:${NC}"
echo "  PID: $PID"
echo "  PID File: $PID_FILE"

# Get process details
echo ""
echo -e "${BLUE}Process Details:${NC}"
ps -p "$PID" -o pid,ppid,user,%cpu,%mem,etime,cmd --no-headers | awk '{
    printf "  PID: %s\n", $1
    printf "  Parent PID: %s\n", $2
    printf "  User: %s\n", $3
    printf "  CPU Usage: %s%%\n", $4
    printf "  Memory Usage: %s%%\n", $5
    printf "  Uptime: %s\n", $6
}'

# Display resource usage
echo ""
echo -e "${BLUE}Resource Usage:${NC}"
# Virtual memory size
VSZ=$(ps -p "$PID" -o vsz --no-headers | awk '{print $1}')
RSS=$(ps -p "$PID" -o rss --no-headers | awk '{print $1}')
echo "  Virtual Memory: $(($VSZ / 1024)) MB"
echo "  Resident Memory: $(($RSS / 1024)) MB"

# Display recent log entries
if [ -f "$LOG_DIR/system.log" ]; then
    echo ""
    echo -e "${BLUE}Recent Log Entries (last 5 lines):${NC}"
    tail -n 5 "$LOG_DIR/system.log" | sed 's/^/  /'
fi

# Display open ports (if netstat is available)
if command -v netstat &> /dev/null; then
    echo ""
    echo -e "${BLUE}Listening Ports:${NC}"
    netstat -tulpn 2>/dev/null | grep "$PID" | awk '{print "  " $4}' || echo "  (netstat requires root privileges)"
fi

echo ""
echo "========================================"
